{
    "swagger": "2.0",
    "info": {
        "contact": {}
    },
    "paths": {
        "/private/v1/short-urls/create": {
            "post": {
                "description": "Create a short URL for the given long URL",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "short-url",
                    "private"
                ],
                "summary": "Create a short URL",
                "parameters": [
                    {
                        "description": "Long URL to be shortened",
                        "name": "ShortURLRequest",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Short URL id",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "400": {
                        "description": "Invalid long URL",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/private/v1/short-urls/{shortURLId}": {
            "delete": {
                "description": "Delete a short URL by its id",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "short-url",
                    "private"
                ],
                "summary": "Delete a short URL",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Short URL id to be deleted",
                        "name": "shortURLId",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Short URL deleted successfully",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "400": {
                        "description": "Invalid short URL id",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/private/v1/short-urls/{shortURLId}/metrics": {
            "get": {
                "description": "Get metrics for a short URL within a specified time range",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "short-url",
                    "private"
                ],
                "summary": "Get short URL metrics",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Short URL id to get metrics for",
                        "name": "shortURLId",
                        "in": "path",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "Start time for metrics (RFC3339 format)",
                        "name": "from",
                        "in": "query",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "End time for metrics (RFC3339 format)",
                        "name": "to",
                        "in": "query",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Short URL metrics",
                        "schema": {
                            "$ref": "#/definitions/metrics.Metrics"
                        }
                    },
                    "400": {
                        "description": "Invalid request parameters",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "404": {
                        "description": "Metrics not found",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/public/v1/short-urls/{shortURLId}": {
            "get": {
                "description": "Redirect to the long URL for the given short URL id",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "short-url",
                    "public"
                ],
                "summary": "Redirect to long URL",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Long URL to be shortened",
                        "name": "longURL",
                        "in": "query",
                        "required": true
                    }
                ],
                "responses": {
                    "302": {
                        "description": "Short URL ID",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "400": {
                        "description": "Invalid long URL",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "404": {
                        "description": "Short URL not found",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "metrics.Metrics": {
            "type": "object",
            "properties": {
                "from": {
                    "type": "string"
                },
                "shortURLId": {
                    "type": "string"
                },
                "to": {
                    "type": "string"
                },
                "uniqueVisits": {
                    "type": "integer",
                    "format": "int64"
                },
                "visits": {
                    "type": "integer",
                    "format": "int64"
                }
            }
        }
    }
}